<div class="container" style="margin-top: 90px; margin-bottom: 90px">
    <div class="row">
        <div class="col">
            <p class="text-end"> Hola {{usuario}} <a href="/admin/login/logout" class="btn btn-warning">Cerrar sesi√≥n <i
                        class="fas fa-sign-out-alt"></i></a></p>
        </div>
    </div>
    <div class="row">
        <div class="col-7">
            <h2>Lista de Historias</h2>
        </div>
        <div class="col-2 text-end">
            <a href="/admin/historias/agregar" class="btn btn-success"><i class="fas fa-plus"></i> Nuevo</a>
        </div>
        <div class="col-3 text-end">
            <form class="d-flex" action="/admin/historias" method="get">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="q" {{#if q}}value="{{q}}"{{/if}}>
                <button class="btn btn-outline-success" type="submit"><i class="fas fa-search"></i></button>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col">Imagen</th>
                        <th scope="col" class="text-end"></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each historias}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td>{{{imagen}}}</td>
                        <td class="text-end">
                            <a href="/admin/historias/modificar/{{id}}" class="btn btn-primary"><i
                                    class="fas fa-edit"></i></a>
                            <a href="/admin/historias/eliminar/{{id}}" class="btn btn-danger"><i
                                    class="far fa-trash-alt"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{#if is_search}}
                {{#unless historias.length}}
                    <p>No hay resultados para <u>"{{q}}"</u></p>
                {{/unless}}
            {{/if}}
        </div>
    </div>
</div>